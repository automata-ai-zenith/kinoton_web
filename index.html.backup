<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GSAP ScrollTrigger Ultimate Demo</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <!-- Progress Indicator -->
    <div class="progress-bar"></div>
    
    <!-- Navigation Dots -->
    <nav class="nav-dots">
        <div class="dot active" data-section="0"></div>
        <div class="dot" data-section="1"></div>
        <div class="dot" data-section="2"></div>
        <div class="dot" data-section="3"></div>
        <div class="dot" data-section="4"></div>
        <div class="dot" data-section="5"></div>
        <div class="dot" data-section="6"></div>
    </nav>

    <!-- Hero Section with Scale Effect -->
    <section class="hero-section">
        <div class="hero-content">
            <h1 class="hero-title">
                <span class="word">GSAP</span>
                <span class="word">ScrollTrigger</span>
                <span class="word">Showcase</span>
            </h1>
            <p class="hero-subtitle">Scroll down to experience magic</p>
            <div class="scroll-indicator">
                <div class="mouse">
                    <div class="wheel"></div>
                </div>
                <span>Scroll</span>
            </div>
        </div>
    </section>

    <!-- Expanding Box Section -->
    <section class="expand-section">
        <div class="expand-container">
            <div class="expand-box">
                <div class="expand-content">
                    <h2>Expand & Transform</h2>
                    <p>Watch as I grow from small to fullscreen</p>
                    <div class="particles">
                        <span></span><span></span><span></span>
                        <span></span><span></span><span></span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Parallax Layers Section -->
    <section class="parallax-section">
        <div class="parallax-bg" data-speed="0.5"></div>
        <div class="parallax-mid" data-speed="0.8">
            <h2 class="parallax-title">Layered Parallax</h2>
        </div>
        <div class="parallax-fg" data-speed="1.2">
            <div class="floating-cards">
                <div class="card" data-rotate="10">Creative</div>
                <div class="card" data-rotate="-15">Motion</div>
                <div class="card" data-rotate="20">Design</div>
            </div>
        </div>
    </section>

    <!-- Text Reveal Section -->
    <section class="text-reveal-section">
        <div class="text-container">
            <h2 class="split-text">
                <span>Every</span>
                <span>scroll</span>
                <span>tells</span>
                <span>a</span>
                <span>story</span>
            </h2>
            <div class="stagger-list">
                <div class="stagger-item">‚ú® Pin animations</div>
                <div class="stagger-item">üéØ Scrub effects</div>
                <div class="stagger-item">üåä Smooth transitions</div>
                <div class="stagger-item">üé® Creative freedom</div>
                <div class="stagger-item">‚ö° Performance optimized</div>
            </div>
        </div>
    </section>

    <!-- Horizontal Scroll Section -->
    <section class="horizontal-section">
        <div class="horizontal-container">
            <div class="panel" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <h3>Panel 1</h3>
                <p>Horizontal scrolling magic</p>
                <div class="panel-icon">üöÄ</div>
            </div>
            <div class="panel" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                <h3>Panel 2</h3>
                <p>Seamless navigation</p>
                <div class="panel-icon">üí´</div>
            </div>
            <div class="panel" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                <h3>Panel 3</h3>
                <p>Creative possibilities</p>
                <div class="panel-icon">üé®</div>
            </div>
            <div class="panel" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                <h3>Panel 4</h3>
                <p>Endless inspiration</p>
                <div class="panel-icon">‚ú®</div>
            </div>
        </div>
    </section>

    <!-- 3D Flip Cards Section -->
    <section class="flip-section">
        <div class="flip-container">
            <h2 class="section-title">Interactive Cards</h2>
            <div class="flip-grid">
                <div class="flip-card">
                    <div class="flip-front">
                        <h4>Scroll</h4>
                        <span class="flip-icon">üëÜ</span>
                    </div>
                    <div class="flip-back">
                        <p>Trigger on scroll</p>
                    </div>
                </div>
                <div class="flip-card">
                    <div class="flip-front">
                        <h4>Pin</h4>
                        <span class="flip-icon">üìå</span>
                    </div>
                    <div class="flip-back">
                        <p>Stay in place</p>
                    </div>
                </div>
                <div class="flip-card">
                    <div class="flip-front">
                        <h4>Scrub</h4>
                        <span class="flip-icon">üéöÔ∏è</span>
                    </div>
                    <div class="flip-back">
                        <p>Sync with scroll</p>
                    </div>
                </div>
                <div class="flip-card">
                    <div class="flip-front">
                        <h4>Snap</h4>
                        <span class="flip-icon">üß≤</span>
                    </div>
                    <div class="flip-back">
                        <p>Magnetic sections</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Morphing Shape Section -->
    <section class="morph-section">
        <div class="morph-container">
            <svg class="morph-svg" viewBox="0 0 800 600">
                <defs>
                    <linearGradient id="morphGradient" x1="0%" y1="0%" x2="100%" y2="100%">
                        <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
                        <stop offset="100%" style="stop-color:#764ba2;stop-opacity:1" />
                    </linearGradient>
                </defs>
                <path class="morph-path" fill="url(#morphGradient)" d=""/>
            </svg>
            <div class="morph-text">
                <h2>Shape Shifter</h2>
                <p>Watch the magic unfold</p>
            </div>
        </div>
    </section>

    <!-- Final CTA Section -->
    <section class="cta-section">
        <div class="cta-container">
            <h2 class="cta-title">
                <span class="char">A</span>
                <span class="char">M</span>
                <span class="char">A</span>
                <span class="char">Z</span>
                <span class="char">I</span>
                <span class="char">N</span>
                <span class="char">G</span>
            </h2>
            <p class="cta-subtitle">This is just the beginning</p>
            <button class="cta-button">
                <span>Restart Journey</span>
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                    <path d="M3 12a9 9 0 1 0 9-9" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                    <polyline points="3 4 3 12 11 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
            </button>
        </div>
        <div class="confetti"></div>
    </section>

    <!-- GSAP CDN -->
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/ScrollTrigger.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/TextPlugin.min.js"></script>
    <script src="script.js"></script>
</body>
</html>